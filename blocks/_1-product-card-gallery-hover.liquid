

{% liquid
  assign product = closest.product
  assign metafield_key_name = block.settings.metafield_key_name | strip
  
  # Split the metafield key into namespace and key
  # Format: "namespace.key" (e.g., "product_details.teaser_title")
  assign metafield_parts = metafield_key_name | split: '.'
  assign metafield_namespace = metafield_parts[0]
  assign metafield_key = metafield_parts[1]
  
  # Access product-level metafield dynamically using bracket notation
  # Liquid supports product.metafields[namespace][key] syntax with variables
  assign metafield_value = product.metafields[metafield_namespace][metafield_key]
-%}
{% if metafield_value != blank %}
  {% capture children %}
    {% content_for 'blocks', closest.product: product %}
  {% endcapture %}
  {% render '1-group', children: children, settings: block.settings, shopify_attributes: block.shopify_attributes %}
{% endif %}

