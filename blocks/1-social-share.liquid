{% stylesheet %}
  .social-share__wrapper {
    display: flex;
    gap: var(--gap-sm);
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  .social-share__icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    height: var(--icon-size-lg);
  }

  .social-share__link {
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: currentColor;
    transition: opacity 0.2s ease;
  }

  .social-share__link:hover {
    opacity: 0.7;
  }

  .social-share__link:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 2px;
    border-radius: 2px;
  }

  .social-share__icon {
    display: flex;
    fill: currentColor;
    flex-shrink: 0;
    width: var(--icon-size-lg);
    height: var(--icon-size-lg);
  }

  .social-share__icon {
    display: none;
  }

  .social-share__icon-wrapper:has(.social-share__icon path) {
    width: var(--icon-size-lg);

    .social-share__icon {
      display: block;
    }

    .social-share__icon-label {
      display: none;
    }
  }

  .social-share__icon-label {
    font-size: 0.875rem;
  }
{% endstylesheet %}

