{% liquid
  assign article = closest.article
  assign image = article.image | default: block.settings.image
  assign ratio = 1

  case block.settings.image_ratio
    when 'landscape'
      assign ratio = '16 / 9'
    when 'portrait'
      assign ratio = '4 / 5'
    when 'adapt'
      if image
        assign ratio = image.aspect_ratio
      endif
  endcase

  if ratio == 0 or ratio == null
    assign ratio = 1
  endif
%}

{% capture class %}
  1-blog-post-card-image 1-blog-post-card-image--{{ block.id }} 1-blog-post-card-image--height-{{ block.settings.height }} spacing-style size-style
{% endcapture %}

{% capture style %}
  --ratio: {{ ratio }};
  {% render 'size-style', settings: block.settings %}
  {% render 'spacing-style', settings: block.settings %}
{% endcapture %}

{% capture image_border_style %}
  --ratio: {{ ratio }};
  {% render 'border-override', settings: block.settings %}
{% endcapture %}

{% liquid
  assign media_width_desktop = '100vw'
  assign media_width_mobile = '100vw'
  assign sizes = 'auto, (min-width: 750px) ' | append: media_width_desktop | append: ', ' | append: media_width_mobile
  assign widths = '300, 450, 600, 750, 900, 1050, 1200, 1350, 1500, 1650, 1800, 1950, 2000, 2500, 3000, 3500, 4000, 5000'
%}

{% capture image_content %}
  {%- if image != blank -%}
    {{
      image
      | image_url: width: 3840
      | image_tag:
        width: image.width,
        widths: widths,
        height: image.height,
        class: '1-blog-post-card-image__image border-style',
        style: image_border_style,
        sizes: sizes,
        alt: image.alt | default: article.title
    }}
  {%- else -%}
    <div class="placeholder-image border-style size-style" style="{{ image_border_style }}">
      <placeholder-image
        data-block-id="{{ block.id }}"
        data-type="general"
      ></placeholder-image>
    </div>
  {%- endif -%}
{% endcapture %}

{% if block.settings.link == blank and article.url %}
  <a
    href="{{ article.url }}"
    class="{{ class }}"
    style="{{ style }}"
    {{ block.shopify_attributes }}
  >
    {{ image_content }}
  </a>
{% elsif block.settings.link != blank %}
  <a
    href="{{ block.settings.link }}"
    class="{{ class }}"
    style="{{ style }}"
    {{ block.shopify_attributes }}
  >
    {{ image_content }}
  </a>
{% else %}
  <div
    class="{{ class }}"
    style="{{ style }}"
    {{ block.shopify_attributes }}
  >
    {{ image_content }}
  </div>
{% endif %}

{% stylesheet %}
  .placeholder-image {
    position: relative;
    aspect-ratio: var(--ratio);
    overflow: hidden;
  }

  placeholder-image img {
    width: 100%;
    height: 100%;
    aspect-ratio: var(--ratio);
  }

  .\31-blog-post-card-image {
    display: flex;
    
    /* When the image is nested in a group, section, etc, respect the parent's horizontal alignment */
    justify-content: var(--horizontal-alignment, 'inline-start');
  }

  .\31-blog-post-card-image--height-fill .\31-blog-post-card-image__image {
    height: 100%;
  }

  .\31-blog-post-card-image__image {
    object-fit: cover;
    aspect-ratio: var(--ratio);
    transition: transform 0.3s ease;
  }

  .\31-blog-post-card-image:hover .\31-blog-post-card-image__image {
    transform: scale(1.05);
  }

  /* Blog post card specific styles */
  .\31-blog-post-card .\31-blog-post-card-image {
    overflow: hidden;
  }

  .\31-blog-post-card-image--portrait {
    --ratio: 4 / 5;
  }

  .\31-blog-post-card-image--landscape {
    --ratio: 16 / 9;
  }

  .\31-blog-post-card-image--square {
    --ratio: 1;
  }
{% endstylesheet %}

